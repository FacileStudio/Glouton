{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@repo/tsconfig/sveltekit.json",
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "paths": {
      "$lib": ["./src"],
      "$lib/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.svelte"],
  "exclude": ["node_modules", "dist"]
}
