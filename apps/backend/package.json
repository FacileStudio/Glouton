{
  "name": "@repo/backend",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun --external=* --minify",
    "start": "bun run dist/index.js",
    "typecheck": "tsc --noEmit",
    "check-env": "bun ./src/env.ts",
    "lint": "eslint src --max-warnings 0"
  },
  "dependencies": {
    "@hono/trpc-server": "^0.4.2",
    "@repo/database": "workspace:*",
    "@repo/logger": "workspace:*",
    "@repo/storage": "workspace:*",
    "@repo/trpc": "workspace:*",
    "@repo/types": "workspace:*",
    "@repo/jobs": "workspace:*",
    "@trpc/server": "^11.9.0",
    "bcryptjs": "^3.0.3",
    "hono": "^4.11.7",
    "jsonwebtoken": "^9.0.3"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/tsconfig": "workspace:*",
    "@types/bcryptjs": "^3.0.0",
    "@types/bun": "^1.3.8",
    "@types/jsonwebtoken": "^9.0.10",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3"
  }
}
