{
  "name": "monorepo-template",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "prettier": "^3.8.1",
    "turbo": "^2.7.6",
    "typescript": "^5.9.3"
  },
  "packageManager": "bun@1.2.0",
  "engines": {
    "node": ">=18.0.0"
  }
}
