{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "db:generate": {
      "inputs": ["schema.prisma"],
      "cache": true
    },
    "check-env": {
      "cache": false,
      "inputs": ["**/.env*", "src/env.ts", "src/lib/env.ts"]
    },
    "build": {
      "dependsOn": ["^build", "db:generate", "check-env"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**", ".svelte-kit/**"]
    },
    "dev": {
      "dependsOn": ["db:generate", "check-env"],
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "type-check": {
      "dependsOn": ["^type-check", "db:generate"]
    },
    "clean": {
      "cache": false
    }
  }
}
